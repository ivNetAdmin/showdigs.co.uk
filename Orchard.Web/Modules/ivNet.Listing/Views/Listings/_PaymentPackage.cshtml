<div class="form-horizontal">
    <div class="col-md-offset-2 col-md-12">
        <h4>Payment Package</h4>
        <hr />
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="Package">Package</label>
        <div class="col-md-10">
            <select ng-options="package.Id as package.Name for package in packages"
                    data-val="true"
                    data-val-required="Package is required."
                    ng-model="package"
                    name="package" id="package">
                <option value="">Select Package</option>
            </select>
            <span class="field-validation-valid text-danger" data-valmsg-for="package" data-valmsg-replace="true"></span>
        </div>
    </div>
</div>