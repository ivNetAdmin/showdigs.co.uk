<div class="col-md-offset-2 col-md-10">
    <div class="form-group">
        <table tr-ng-grid='' items='fileList'
               selected-items="fileSelectedItems"
               enable-multi-row-selections="true" enable-selections="true"
               enable-filtering="false" enable-sorting="false">
            <thead>
                <tr>
                    <th field-name="Id" display-name="" display-align="right"></th>
                    <th field-name="File" display-name="File"></th>
                    <th field-name="Size" display-name="Size"></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td field-name="File"><img src="{{gridDisplayItem.File}}" /></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="col-md-offset-2 col-md-10">
    <div class="form-group">
        <div class="file_name">
        </div>
        <br />
        <div class="file_type">
        </div>
        <br />
        <div class="file_size">
        </div>
    </div>
</div>
